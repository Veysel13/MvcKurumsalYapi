@model List<Northwind.Entities.Category>


@Html.RouteLink("Home",new
                        {
                            controller="Product"
                            ,action="Index",
                            category =0
                        },
                            new {@class= ViewBag.CurrentCategory == 0?"selected":null}
    )

@foreach (var item in Model)
{
    //url oluşturmya yarayn helper metod
    @Html.RouteLink(item.CategoryName,new
                                        {
                                            category=item.CategoryID,
                                            controller ="Product",
                                            action ="Index"
                                        },
                                        new {@class=item.CategoryID== ViewBag.CurrentCategory?"selected":null}
        )
}
